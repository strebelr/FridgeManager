<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/layout_main">

    <!-- other widgets go here-->


    <TextView
        android:text="  Welcome to Fridge Manager! This is an app that helps you manage your food more easily!

    The current version consists of three main components: Fridge, Food to Expire, and Manual Entry.
"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/intro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_below="@+id/intro"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_camera"
        android:id="@+id/cameraIcon"/>

    <TextView
        android:text="  By clicking on “camera icon”, you can scan your grocery receipt and then all the food items will be automatically recognized and added to “Fridge”.
        "
        android:layout_below="@+id/intro"
        android:layout_toRightOf="@+id/cameraIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="16dp"
        android:id="@+id/cameraIconText"/>

    <ImageView
        android:layout_below="@+id/cameraIconText"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_undo"
        android:id="@+id/undoIcon"/>

    <TextView
        android:text="  Undo a delete or decrement action you took. You can undo up to 10 actions.
        "
        android:layout_below="@+id/cameraIconText"
        android:layout_toRightOf="@+id/cameraIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="16dp"
        android:id="@+id/undoIconText"/>

    <ImageView
        android:layout_below="@+id/undoIconText"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu"
        android:id="@+id/menuIcon"/>

    <TextView
        android:text="“Time to Alert”: You can adjust the number of days (X) so that “Food to Expire” page displays all the food that will expire within X days.
“Amount Consumed”: You can adjust the percentage of food being decreased each time.
        "
        android:layout_below="@+id/undoIconText"
        android:layout_toRightOf="@+id/cameraIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="16dp"
        android:id="@+id/menuIconText"/>

    <TextView
        android:text="Fridge"
        android:textStyle="bold"
        android:textSize="@dimen/titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_below="@+id/menuIconText"
        android:id="@+id/fridge"/>

    <TextView
        android:text="Displays all food items in your Fridge, Fresh, Pantry, and Freezer.
The amount of food can be decreased using “Decrement Button”. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_toRightOf="@+id/fridge"
        android:layout_below="@+id/menuIconText"

        android:id="@+id/fridgeText"/>


    <!-- <TextView
         android:text="click anywhere to access main page"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/textView2" />
         -->

</RelativeLayout>